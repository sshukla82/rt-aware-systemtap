	else  {
		struct request *rq = list_entry_rq(q->queue_head.next); /* FIXME: deref hazard! */
		struct gendisk *rq_disk = kread(&(rq->rq_disk));
		THIS->__retvalue = kread(&(rq_disk->first_minor));
	}
	CATCH_DEREF_FAULT();
%}
